# ============================================
# VeriVote Kenya - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git (it contains secrets!)

# --------------------------------------------
# Server Configuration
# --------------------------------------------
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# --------------------------------------------
# PostgreSQL Database
# --------------------------------------------
# These match the values in docker-compose.yml
DB_HOST=localhost
DB_PORT=5432
DB_NAME=verivote_dev
DB_USER=verivote
DB_PASSWORD=verivote_secure_2024

# Full connection string (alternative to individual values)
DATABASE_URL=postgresql://verivote:verivote_secure_2024@localhost:5432/verivote_dev

# --------------------------------------------
# Redis Cache
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# Generate a secure random string for production!
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# --------------------------------------------
# Blockchain Configuration (Week 1-2)
# --------------------------------------------
# We'll use a local testnet for development
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_RPC_URL=http://localhost:8545

# Deployer private key (Hardhat default account #0 for local development)
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Contract addresses (update after running deploy script)
SBT_CONTRACT_ADDRESS=
VOTE_CONTRACT_ADDRESS=

# --------------------------------------------
# Persona Identity Verification
# --------------------------------------------
# Set PERSONA_MOCK=true for local dev (auto-completes verification)
PERSONA_MOCK=true
PERSONA_API_KEY=persona_sandbox_xxx
PERSONA_TEMPLATE_ID=itmpl_xxx
PERSONA_WEBHOOK_SECRET=wbhsec_xxx

# --------------------------------------------
# External APIs (Future)
# --------------------------------------------
# Africa's Talking API for SMS (Week 5)
# AT_API_KEY=your-api-key
# AT_USERNAME=your-username

# OpenAI API for AI features (Week 6)
